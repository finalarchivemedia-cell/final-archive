generator client {
  provider = "prisma-client-js"
  // Include Linux OpenSSL 3 target to avoid runtime mismatch on PaaS environments.
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Use an unpooled / direct connection for migrations & introspection (recommended on Neon)
  directUrl = env("DATABASE_URL_UNPOOLED")
}

enum MediaType {
  IMAGE
  VIDEO
}

model Image {
  id          String   @id
  originalKey String   @unique
  url         String
  mediaType   MediaType @default(IMAGE)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  width       Int?
  height      Int?
  sizeBytes   Int?
  contentType String?

  @@map("images")
}

model Settings {
  key   String @id
  value Json

  @@map("settings")
}
